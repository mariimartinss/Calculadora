<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" android:padding="16dp">
    <TextView android:id="@+id/tvResult" android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="end" android:text="0" android:textSize="32sp" android:padding="16dp" android:background="#EFEFEF" android:layout_marginBottom="16dp"/>
    <GridLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:columnCount="4" android:rowCount="5" android:layout_gravity="center">
        <!--  Numbers and Operators  -->
        <Button android:text="7" android:layout_columnSpan="1" android:onClick="onNumberClick"/>
        <Button android:text="8" android:layout_columnSpan="1" android:onClick="onNumberClick"/>
        <Button android:text="9" android:layout_columnSpan="1" android:onClick="onNumberClick"/>
        <Button android:text="÷" android:layout_columnSpan="1" android:onClick="onOperatorClick"/>
        <Button android:text="4" android:layout_columnSpan="1" android:onClick="onNumberClick"/>
        <Button android:text="5" android:layout_columnSpan="1" android:onClick="onNumberClick"/>
        <Button android:text="6" android:layout_columnSpan="1" android:onClick="onNumberClick"/>
        <Button android:text="×" android:layout_columnSpan="1" android:onClick="onOperatorClick"/>
        <Button android:text="1" android:layout_columnSpan="1" android:onClick="onNumberClick"/>
        <Button android:text="2" android:layout_columnSpan="1" android:onClick="onNumberClick"/>
        <Button android:text="3" android:layout_columnSpan="1" android:onClick="onNumberClick"/>
        <Button android:text="−" android:layout_columnSpan="1" android:onClick="onOperatorClick"/>
        <Button android:text="C" android:layout_columnSpan="1" android:onClick="onClearClick"/>
        <Button android:text="0" android:layout_columnSpan="1" android:onClick="onNumberClick"/>
        <Button android:text="=" android:layout_columnSpan="1" android:onClick="onEqualsClick"/>
        <Button android:text="+" android:layout_columnSpan="1" android:onClick="onOperatorClick"/>
    </GridLayout>
</LinearLayout>
